@model IEnumerable<MvcApplication2.Models.subject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h2>Materia</h2>
@if (ViewBag.Message != null )
{
    <div class="message">@ViewBag.Message</div>
}
<p>
    @Html.ActionLink("Nueva Materia", "Create","Materia")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codigo_subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre_subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.max_alumnos)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codigo_subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.max_alumnos)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.id_subject  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.id_subject }) |
            @* @Html.ActionLink("Delete", "Delete", new {  id=item.id_subject  }) *@
        </td>
    </tr>
}

</table>
